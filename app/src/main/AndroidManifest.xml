<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecocyam">

    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.SelectPictureProduct"></activity>
        <activity android:name=".activities.ProductFeaturesActivity"></activity>
        <activity android:name=".activities.SearchResultActivity" />
        <activity android:name=".activities.ModifyUserInformation" />
        <activity android:name=".activities.AboutUsActivity" />
        <activity android:name=".activities.CreateAccountActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.ScannerActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>